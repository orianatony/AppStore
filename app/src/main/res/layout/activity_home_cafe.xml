<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeCafe">

    <ImageView
        android:id="@+id/imageCoffe"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/coffe_image_descr"
        app:layout_constraintBottom_toTopOf="@+id/listaCoffe"
        app:layout_constraintEnd_toEndOf="@+id/listaCoffe"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_cafex" />

    <ListView
        android:id="@+id/listaCoffe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCoffe"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>